<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <AssemblyName>ag.WPF.NumericBox</AssemblyName>
    <RootNamespace>ag.WPF.NumericBox</RootNamespace>
    <Description>Represents custom control for input and formatted output of decimal values</Description>
    <Company>Andrey Gruber</Company>
    <Authors>Andrey Gruber</Authors>
    <Copyright>© Andrey Gruber 2023-2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageTags>WPF NumericBox .NET Framework Custom</PackageTags>
    <PackageId />
    <Version>2.0.7</Version>
    <RepositoryUrl>https://github.com/dedpichto/ag.WPF.NumericBox</RepositoryUrl>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <PackageReleaseNotes>Note for developers: if you have used to use custom style for NumricBox control with versions prior to 2.0.1, please replace the old resource dictionary by new one from https://github.com/dedpichto/ag.WPF.NumericBox/tree/master/ag.WPF.NumericBox/Themes</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\ag.WPF.NumericBox\NumericBox.cs" Link="NumericBox.cs" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Themes\" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="..\ag.WPF.NumericBox\Themes\Generic.xaml" Link="Themes\Generic.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
  </ItemGroup>

</Project>
